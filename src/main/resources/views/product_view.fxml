<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.angel.javafx.app.javafxapp.controllers.ProductController"
      spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>


    <HBox spacing="10">

        <TextField fx:id="nameField" promptText="Nombre"/>
        <TextField fx:id="descField" promptText="Descripción"/>
        <TextField fx:id="priceField" promptText="Precio"/>

        <Button fx:id="addButton" text="Agregar"/>
        <Button fx:id="clearButton" text="Limpiar"/>

    </HBox>


    <TableView fx:id="tableView">
        <columns>
            <TableColumn fx:id="nameColumn" text="Nombre"/>
            <TableColumn fx:id="descColumn" text="Descripción"/>
            <TableColumn fx:id="priceColumn" text="Precio"/>
            <TableColumn fx:id="editColumn" text="Editar"/>
            <TableColumn fx:id="deleteColumn" text="Eliminar"/>

        </columns>
    </TableView>

</VBox>